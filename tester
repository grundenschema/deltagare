  <pre id="output">H√§mtar data...</pre>

  <script>
    // L√§nken till ditt Apps Script (den fungerar)
    const url = "https://script.google.com/macros/s/AKfycbyrif6NVB3DPkmSam6kOX_M3xcXcrkBGFKVznDV2PRrUxIrN0q9c16VCgNQ7fFtrwBS/exec";

    async function loadData() {
      try {
        const res = await fetch(url + "?t=" + Date.now());
        if (!res.ok) throw new Error("HTTP-fel " + res.status);
        const json = await res.json();

        // Visa data p√• sidan
        document.getElementById("output").textContent =
          JSON.stringify(json, null, 2);
      } catch (err) {
        // Om n√•got g√•r fel
        document.getElementById("output").textContent =
          "Fel vid h√§mtning:\n" + err;
      }
    }

    // K√∂r direkt n√§r sidan √∂ppnas
    loadData();
  </script>
